<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
  <div class="control-group">
    <%= f.label :email, class: "control-label" do%>
      <abbr class="required">*</abbr>
      邮箱<br />
    <%end%>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, :placeholder => "邮箱地址" %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :password,  class: "control-label" do %>
      <abbr class="required">*</abbr>
      密码<br />
    <% end %>
    <div class="controls">
      <%= f.password_field :password, :placeholder => "必须 8 位以上字母和数字" %>
    </div>
    
  </div>


  <div class="control-group">
    <div class="controls">
      <% if devise_mapping.rememberable? -%>
        <%= f.label(:remember_me, :html => {class: 'checkbox'}) do %>
          <%= f.check_box :remember_me %> 记住登录状态
        <%end%>
      <% end -%>
    </div>

    <div class="form-actions">
      <%= f.submit "登录", class: 'btn btn-primary btn-small', data: { disable_with: "正在登录..." } %>
    </div>
  </div>
</fieldset>
<% end %>
<%= render "devise/shared/links" %>
